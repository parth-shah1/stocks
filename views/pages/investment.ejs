<!DOCTYPE html>
<html lang="en">
<head>
  <title>Investment</title>
  <%- include('../partials/head'); %>

</head>
<body class="bg-dark">
    <div class="container-fluid">
      <%- include('../partials/navbar'); %>

      <% if (errorMessage) { %>
        <h4 class="text-warning"><%= errorMessage %></h4>
    <% } %>
      
      <br>
      <div class="row">
        <% if (trades !== null) { %>
        <div class="col-sm-12">
          <h4><b class="text-primary">Amount</b>&nbsp; <b class="text-warning">:</b>&nbsp;&nbsp;<b class="text-success"> <%= trades.amount %> ₹ </b></h4>
        </div>
        <% } %>
      </div>
      <br>
      <table class="table table-dark table-hover table-sm">
        <thead>
          <tr>
            <th>Share</th>
            <th>Quantity</th>
            <th>Avg Buy Price</th>
            <th>Sell</th>
          </tr>
        </thead>
        <% if (trades !== null) { %>
        <tbody>
          <% if (trades.tcs.length !== 0) { %>
            <% if (trades.tcs[0] !== 0) { %>
            <tr>
              <td>TCS</td>
              <td><%= trades.tcs[0] %></td>
              <td><%= trades.tcs[1]/trades.tcs[0] %> ₹</td>
              <td>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#tcs">Sell
                </button>              
              </td>
            </tr>
            <% } %>
          <% } %>
          <% if (trades.hdfc.length !== 0) { %>
            <% if (trades.hdfc[0] !== 0) { %>
            <tr>
              <td>HDFC</td>
              <td><%= trades.hdfc[0] %></td>
              <td><%= trades.hdfc[1] %> ₹</td>
              <td>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#hdfc">Sell
                </button>              
              </td>
            </tr>
            <% } %>
          <% } %>
          <% if (trades.bpcl.length !== 0) { %>
            <% if (trades.bpcl[0] !== 0) { %>
            <tr>
              <td>BPCL</td>
              <td><%= trades.bpcl[0] %></td>
              <td><%= trades.bpcl[1] %> ₹</td>
              <td>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#bpcl">Sell
                </button>              
              </td>
            </tr>
            <% } %> 
          <% } %>
          <% if (trades.heromotocorp.length !== 0) { %>
            <% if (trades.heromotocorp[0] !== 0) { %>
            <tr>
              <td>HeroMotoCorp</td>
              <td><%= trades.heromotocorp[0] %></td>
              <td><%= trades.heromotocorp[1] %> ₹</td>
              <td>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#heromotocorp">Sell
                </button>              
              </td>
            </tr>
            <% } %> 
          <% } %>
          <% if (trades.pfizer.length !== 0) { %>
            <% if (trades.pfizer[0] !== 0) { %>
            <tr>
              <td>Pfizer</td>
              <td><%= trades.pfizer[0] %></td>
              <td><%= trades.pfizer[1] %> ₹</td>
              <td>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#pfizer">Sell
                </button>              
              </td>
            </tr>
            <% } %> 
          <% } %> 
          

        </tbody>
        <% } %>
      </table>
         <!-- The Modal -->
       <form action="/investment" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="sharename" value="tcs">
          <div class="modal fade" id="tcs">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
              
                <!-- Modal Header -->
                <div class="modal-header  bg-info">
                  <h5 class="modal-title">TCS</h5>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                
                <!-- Modal body -->
                <div class="modal-body bg-light">
                  <input type="number" min ="1" class="form-control" id="qty" placeholder="Enter Qty" name="qty">
                </div>
                
                <!-- Modal footer -->
                <div class="modal-footer">
                  <button type="submit" class="btn btn-danger">Sell</button>
                </div>
                
              </div>
            </div>
          </div>
       </form>

